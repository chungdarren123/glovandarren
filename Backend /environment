import requests
from ..config import settings
from typing import Optional
import logging

logger = logging.getLogger(__name__)

class CarbonInterfaceService:
    def __init__(self):
        self.api_key = settings.CARBON_INTERFACE_API_KEY
        self.base_url = "https://api.carboninterface.com/v1"
        self.headers = {
            "Authorization": f"Bearer {self.api_key}",
            "Content-Type": "application/json"
        }
    
    def get_carbon_footprint(self, product_id: str) -> Optional[float]:
        try:
            response = requests.get(
                f"{self.base_url}/products/{product_id}/footprint",
                headers=self.headers,
                timeout=5
            )
            response.raise_for_status()
            data = response.json()
            return data.get("co2e")
        except requests.exceptions.RequestException as e:
            logger.error(f"Carbon Interface API error: {str(e)}")
            return None
