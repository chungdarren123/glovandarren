import requests
from ..config import settings
from typing import Optional
import logging

logger = logging.getLogger(__name__)

class EconomicService:
    def __init__(self):
        self.api_key = settings.ECONOMIC_API_KEY
        self.base_url = "https://api.economicdata.com/v1"
        self.headers = {
            "Authorization": f"Bearer {self.api_key}",
            "Accept": "application/json"
        }
    
    def get_economic_score(self, company_id: str) -> Optional[float]:
        try:
            response = requests.get(
                f"{self.base_url}/companies/{company_id}/sustainability",
                headers=self.headers,
                timeout=5
            )
            response.raise_for_status()
            data = response.json()
            return data.get("economic_stability_score")
        except requests.exceptions.RequestException as e:
            logger.error(f"Economic API error: {str(e)}")
            return None
