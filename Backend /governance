import requests
from ..config import settings
from typing import Optional
import logging

logger = logging.getLogger(__name__)

class MSCIESGService:
    def __init__(self):
        self.api_key = settings.MSCI_API_KEY
        self.base_url = "https://api.msci.com/esg"
        self.headers = {
            "X-API-KEY": self.api_key,
            "Accept": "application/json"
        }
    
    def get_governance_score(self, isin: str) -> Optional[float]:
        try:
            response = requests.get(
                f"{self.base_url}/scores/{isin}",
                headers=self.headers,
                timeout=5
            )
            response.raise_for_status()
            data = response.json()
            return data.get("governance_score")
        except requests.exceptions.RequestException as e:
            logger.error(f"MSCI API error: {str(e)}")
            return None
