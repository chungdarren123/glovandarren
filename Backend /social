import requests
from ..config import settings
from typing import Optional
import logging

logger = logging.getLogger(__name__)

class SustainalyticsService:
    def __init__(self):
        self.api_key = settings.SUSTAINALYTICS_API_KEY
        self.base_url = "https://api.sustainalytics.com/v2"
        self.headers = {
            "Authorization": f"Bearer {self.api_key}",
            "Accept": "application/json"
        }
    
    def get_social_score(self, company_id: str) -> Optional[float]:
        try:
            response = requests.get(
                f"{self.base_url}/companies/{company_id}/scores/social",
                headers=self.headers,
                timeout=5
            )
            response.raise_for_status()
            data = response.json()
            return data.get("score")
        except requests.exceptions.RequestException as e:
            logger.error(f"Sustainalytics API error: {str(e)}")
            return None
